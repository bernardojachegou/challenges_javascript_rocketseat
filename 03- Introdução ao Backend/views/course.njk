{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}}
        - Rocketseat</title>
{% endblock %}

{% block content %}

    <section class="course">

        <div class="card" id="{{item.id}}">
            <div class="card_container">
                <img src="{{item.image_url}}" alt="Imagem de {{item.title}}">
            </div>

            <div class="card_content">
                <p>{{item.title}}</p>
            </div>

            <div class="card_info">
                <p>{{item.course_modules}}</p>
                <p class="card_price">{{item.price}}</p>
            </div>
        </div>

        <div id="course_info">
            <h1>{{item.title}}</h1>
            <p>{{item.course_information}}</p>
            <p id="more_info">Mais informações</p>
        </div>

    </section>

    <script src="/scripts.js"></script>

{% endblock %}